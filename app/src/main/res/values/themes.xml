<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarkdownKeyboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/title_blue</item><!-- みまもりこちゃんの色 -->
        <item name="colorPrimaryVariant">@color/blue_primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_text_color</item>
        <item name="colorSecondaryVariant">@color/main_text_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/title_pink</item><!-- 時間の色 -->
        <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:backgroundTint">@color/title_pink</item><!-- 時間、背景、ボタン、戻るの色 -->
        <item name="android:textColor">@color/black</item>
          <!-- アクションバー非表示 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Key">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:backgroundTint">@color/keyboard_bg</item>
    </style>

</resources>