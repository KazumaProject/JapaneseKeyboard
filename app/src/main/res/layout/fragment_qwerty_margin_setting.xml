<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/qwerty_margins_settings"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vertical_margin_keys_height_gap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar_vertical_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="50" />

            <TextView
                android:id="@+id/value_vertical_margin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="5.0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_horizontal_gap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/horizontal_gap_between_keys" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar_horizontal_gap"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="20" />

            <TextView
                android:id="@+id/value_horizontal_gap"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="2.0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_indent_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/indent_large_2nd_row_indent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar_indent_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="500"
                android:progress="230" />

            <TextView
                android:id="@+id/value_indent_large"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="23.0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_indent_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/indent_small_adjustment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar_indent_small"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="300"
                android:progress="90" />

            <TextView
                android:id="@+id/value_indent_small"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="9.0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_side_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/side_margin_edge_keys" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar_side_margin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="200"
                android:progress="40" />

            <TextView
                android:id="@+id/value_side_margin"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="4.0dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/label_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/qwerty_key_letter_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekbar_text_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="400"
                android:progress="200" />

            <TextView
                android:id="@+id/value_text_size"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                tools:text="18.0sp" />
        </LinearLayout>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="@string/reset_to_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="24dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/preview" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/keyboard_bg"
            android:padding="8dp">

            <com.kazumaproject.qwerty_keyboard.ui.QWERTYKeyboardView
                android:id="@+id/preview_qwerty_view"
                android:layout_width="match_parent"
                android:layout_height="300dp" />
        </FrameLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
