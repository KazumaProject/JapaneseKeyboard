<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/show_soft_keyboard_btn"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="18dp"
        android:background="@drawable/keyboard_24px"
        android:contentDescription="show_soft_keyboard_btn"
        android:src="@drawable/outline_arrow_drop_down_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/keyboard_icon_color" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/physical_keyboard_input_mode_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="入力: 日本語"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/show_soft_keyboard_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
