<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/btnReset"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="リセット"
        app:icon="@android:drawable/ic_menu_revert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.kazumaproject.markdownhelperkeyboard.setting_activity.ui.sumire_custom_angle.CircularFlickPreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="#EEEEEE"
        app:layout_constraintBottom_toTopOf="@id/tvSelectDirection"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnReset" />

    <TextView
        android:id="@+id/tvSelectDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="編集する方向を選択"
        app:layout_constraintBottom_toTopOf="@id/chipGroupDirection"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@id/sliderStartAngle"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipUp"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="上 (UP)" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipRight"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右 (RIGHT)" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDown"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下 (DOWN)" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLeft"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="左 (LEFT)" />

    </com.google.android.material.chip.ChipGroup>
    <TextView
        android:id="@+id/tvStartLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="開始角度"
        app:layout_constraintBottom_toTopOf="@id/sliderStartAngle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvStartValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tvStartLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="225°" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderStartAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="360"
        app:layout_constraintBottom_toTopOf="@id/sliderSweepAngle" />

    <TextView
        android:id="@+id/tvSweepLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有効範囲"
        app:layout_constraintBottom_toTopOf="@id/sliderSweepAngle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvSweepValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/tvSweepLabel"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="90°" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderSweepAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:stepSize="1"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
