<resources>
    <!-- Base application theme. -->
    <style name="Theme.MarkdownKeyboard" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/enter_key_bg</item>
        <item name="colorPrimaryVariant">@color/blue_primary_color</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/enter_key_bg</item>
        <item name="colorSecondaryVariant">@color/sub_text_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
    </style>
</resources>
