<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Highlighted state when pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?attr/colorSecondaryContainer" /> <!-- Highlight color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" /> <!-- Normal background color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
