<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerHigh" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorSurfaceContainerHighest" />
            <stroke android:width="1dp" android:color="@color/keyShadowColor" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>

</selector>
