<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/side_key_disable_color" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/side_key_disable_color" />
        </shape>
    </item>

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/side_key_disable_color" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default (enabled but not pressed) state -->
    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/qwety_key_bg_color_2" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/keyShadowColor" />
        </shape>
    </item>

</selector>