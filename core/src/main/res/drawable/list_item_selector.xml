<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- API 21+ ripple on press -->
    <item android:state_pressed="true">
        <ripple android:color="@color/enter_key_press">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/enter_key_bg" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="@color/enter_key_bg" />
                </shape>
            </item>
        </ripple>
    </item>

    <!-- Activated (e.g. toggle on) -->
    <item android:state_activated="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/enter_key_bg" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/enter_key_bg" />
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/candidate_background" />
            <corners android:radius="4dp" />
            <stroke android:width="1dp" android:color="@color/keyboard_boarder_color" />
        </shape>
    </item>

</selector>
