<?xml version="1.0" encoding="utf-8"?><!-- res/layout/key_preview.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foregroundGravity="center">

    <!--
      1) Wrap_content so the view shrinks/grows to match the vector’s intrinsic size.
      2) Use adjustViewBounds="true" so the ImageView keeps the proper aspect ratio.
      3) Add padding so there’s breathing room around the character inside the bubble.
    -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/preview_bubble_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/key_preview_bubble" />

    <!--
      1) wrap_content for width/height so the text only takes as much space as it needs.
      2) layout_gravity="center" makes it sit exactly in the middle of its parent FrameLayout.
      3) gravity="center" inside the TextView is just in case you ever give it extra width or height.
    -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/preview_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="26dp"
        android:text="A"
        android:textColor="@color/keyboard_icon_color"
        android:textSize="24sp" />
</FrameLayout>
